<div class="card-login">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">
        <label class="form-label" for="username-login">Email</label>
        <input  id="username-login" type="text" autocomplete="username" autofocus="true" class="form-input" />

        <label class="form-label" for="password-login">Password</label>
        <input id="password-login" type="password" autocomplete="current-password" autofocus="true" class="form-input" />

        <button type="submit" class="btn">Login</button>
        <a class="login-link" href="/signup">Or Create Account</a>
  </form>
</div>
    
<script src="/javascript/login.js"></script>