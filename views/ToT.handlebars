<div class="container">
    <div class="section">

        <!--   Icon Section   -->
        <div class="row">
            
            <div class="card col s12">
                <div class="card col s6">
                    <div class="card-image waves-effect waves-block waves-light">
                        {{!-- <img class="activator" src="images/office.jpg"> --}}
                    </div>
                    <div class="card-content">
                        {{#each displayed}}
                        {{#if @first}}
                        {{title}}
                        <br>
                        <img src=https://www.themoviedb.org/t/p/w150_and_h225_bestv2/{{poster_path}}>
                        <div class="is-pulled-right new-post-form">
    
                               <a href="single-post/{{id}}" type="submit">{{format_plural "comment"}}</a>
                               </div>
                        {{/if}}
                        {{/each}}
                        <span class="card-title activator grey-text text-darken-4"><i
                                class="material-icons right">more_vert</i></span>
